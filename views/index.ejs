<!DOCTYPE html>
<html>
<head>
  <% include partials/head %>
  <script>var answerIndex = <%= answerIndex %></script>
  <% if(locals.user){ %>
    <script>var loggedIn = true;</script>
  <% } else{%>
    <script>var loggedIn = false;</script>
  <% } %>
  <script>
    //pass answers.length from ejs to javascript, which will refresh page if there is not 12 answers
    var answersLength = <%= answers.length %>
  </script>

  <script src="/javascripts/randomquestion.js"></script>
</head>
<body>
<header>
  <% include partials/header %>
</header>


  <div class="container" id="quizgamescore">
    <% if(locals.user){%>
     Score <div id="score"><%= locals.session.score %></div>
    <% }else{ %>
    <a href="/login">Login To Keep Score</a>
    <% } %>
  </div>

  <div class="container col-sm-8 col-sm-offset-1" id="quizgamequestion">
    <p id="quizgamecategory">
      <%= category %>
    </p>
    <p>
      <%= question %>
    </p>
  </div>

<% if(answers.length == 12){ %>

  <div class="container col-md-12" id="quizgameanswers">
    <div class="btn-group-lg btn-group-justified row">
      <% var i = 0 %>
      <% for(i = i; i < 4; i++){ %>
        <a href="#" onclick="answerClicked('<%= i %>')" id="<%= i %>" class="btn btn-primary col-md-3 btn-responsive"><%= answers[i].label %></a>
      <% } %> 
    </div> 
    <div class="btn-group-lg btn-group-justified row">
      <% for(i = i; i < 8; i++){ %>
        <a href="#" onclick="answerClicked('<%= i %>')" id="<%= i %>" class="btn btn-primary col-md-3 btn-responsive"><%= answers[i].label %></a>
      <% } %> 
    </div> 
    <div class="btn-group-lg btn-group-justified row">
      <% for(i = i; i < 12; i++){ %>
        <a href="#" onclick="answerClicked('<%= i %>')" id="<%= i %>" class="btn btn-primary col-md-3 btn-responsive"><%= answers[i].label %></a>
      <% } %> 
    </div>
  </div>

<% }//end answers.length %>

  <footer>
    <% include partials/footer %>
  </footer>

</body>
</html>
